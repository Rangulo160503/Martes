@page
@model LogoutModel
@{
    ViewData["Title"] = "Cerrar sesión";
}

<div class="container" style="max-width: 500px;">
    <div class="card shadow-soft border-0 rounded-2xl mt-4">
        <div class="card-body p-4 text-center">
            <h3 class="mb-3">@ViewData["Title"]</h3>

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <p class="mb-4">¿Estás seguro de que deseas cerrar sesión?</p>
                <form asp-area="Identity" asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                      method="post">
                    <button type="submit" class="btn btn-accent">Cerrar sesión</button>
                    <a asp-page="/Index" class="btn btn-outline-primary ms-2">Cancelar</a>
                </form>
            }
            else
            {
                <p class="mb-0 text-muted">
                    Has cerrado sesión correctamente.
                </p>
                <a asp-page="/Account/Login" class="btn btn-accent mt-3">Iniciar sesión nuevamente</a>
            }
        </div>
    </div>
</div>
