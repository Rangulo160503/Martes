@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="container" style="max-width: 480px;">
    <div class="card shadow-soft border-0 rounded-2xl mt-3">
        <div class="card-body p-4">
            <h3 class="mb-1 text-center">@ViewData["Title"]</h3>
            <p class="text-muted text-center mb-4">

            </p>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Correo</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="tu@correo.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="********" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">Recordarme</label>
                </div>

                <button id="login-submit" type="submit" class="btn btn-accent w-100 mb-3">Entrar</button>

                <div class="d-flex justify-content-between">
                    <a id="forgot-password" asp-page="./ForgotPassword" class="small">¿Olvidaste tu contraseña?</a>
                    <a href="/seccion/registro" class="small">Crear cuenta</a>
                </div>
            </form>
        </div>
    </div>

    @* Proveedores externos *@
    <div class="card shadow-soft border-0 rounded-2xl mt-3">
        <div class="card-body p-4">
            <h5 class="mb-3">Iniciar sesión con otro servicio</h5>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <p class="text-muted mb-0">
                        No hay servicios externos configurados.
                    </p>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="d-grid gap-2">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit"
                                        class="btn btn-outline-primary"
                                        name="provider"
                                        value="@provider.Name"
                                        title="Inicia sesión con @provider.DisplayName">
                                    @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
