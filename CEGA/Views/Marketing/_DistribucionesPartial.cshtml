@model IEnumerable<CEGA.Models.ProgramacionDistribucion>

@{
    var count = Model?.Count() ?? 0;
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mt-2 mb-2">
    <h4 class="mb-0">Distribuciones</h4>
    <span class="text-muted small">@count registro(s)</span>
</div>

<!-- Alerta de última creación -->
@if (TempData["UltimaDistribucionNombre"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
        <div class="fw-semibold mb-1">Distribución creada exitosamente</div>
        <div class="small">
            <div><strong>Nombre:</strong> @TempData["UltimaDistribucionNombre"]</div>
            <div><strong>Descripción:</strong> @TempData["UltimaDistribucionDescripcion"]</div>
            <div><strong>Fecha y hora:</strong> @TempData["UltimaDistribucionFecha"]</div>
            <div><strong>Pool:</strong> @TempData["UltimaDistribucionPool"]</div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

<!-- Formulario: nueva programación -->
<div class="card card-lg mb-3">
    <div class="card-header">Nueva programación</div>
    <div class="card-body">
        <form asp-action="CrearProgramacionDistribucion"
              asp-controller="Marketing"
              method="post"
              class="row g-2"
              novalidate>
            @Html.AntiForgeryToken()

            <div class="col-md-3">
                <label class="form-label" for="Nombre">Nombre</label>
                <input id="Nombre" name="Nombre" class="form-control" placeholder="Nombre" required />
            </div>

            <div class="col-md-3">
                <label class="form-label" for="Descripcion">Descripción</label>
                <input id="Descripcion" name="Descripcion" class="form-control" placeholder="Descripción" required />
            </div>

            <div class="col-md-3">
                <label class="form-label" for="FechaHoraEnvio">Fecha y hora</label>
                <input id="FechaHoraEnvio" name="FechaHoraEnvio" type="datetime-local" class="form-control" required />
            </div>

            <div class="col-md-2">
                <label class="form-label" for="NombrePool">Pool</label>
                <input id="NombrePool" name="NombrePool" class="form-control" placeholder="Nombre del pool" required />
            </div>

            <div class="col-md-1 d-flex align-items-end">
                <button type="submit" class="btn btn-accent w-100">Agregar</button>
            </div>
        </form>
    </div>
</div>

<!-- Listado -->
@if (Model != null && Model.Any())
{
    <div class="card">
        <div class="card-header">Programaciones</div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th style="min-width:260px;">Descripción</th>
                            <th style="min-width:180px;">Fecha y hora</th>
                            <th>Pool</th>
                            <th style="width:220px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dist in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@dist.Nombre</td>
                                <td class="text-truncate" style="max-width:420px;">@dist.Descripcion</td>
                                <td>@(dist.FechaHoraEnvio?.ToString("dd/MM/yyyy HH:mm") ?? "—")</td>
                                <td>@dist.NombrePool</td>
                                <td>
                                    <div class="d-flex flex-wrap gap-2">
                                        <form asp-action="EditarProgramacion"
                                              asp-controller="Marketing"
                                              method="post"
                                              class="m-0 d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="Id" value="@dist.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary">Editar</button>
                                        </form>

                                        <form asp-action="EliminarProgramacion"
                                              asp-controller="Marketing"
                                              method="post"
                                              class="m-0 d-inline"
                                              onsubmit="return confirm('¿Eliminar esta programación?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@dist.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning mb-0">No hay distribuciones registradas.</div>
}
