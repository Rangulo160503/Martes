@model CEGA.Models.ViewModels.MarketingPageVM
@{
    ViewData["Title"] = "Marketing";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var campCount = Model?.Campanias?.Count ?? 0;
    var poolCount = Model?.Pools?.Count ?? 0;
    var cliCount = Model?.Clientes?.Count ?? 0;
}

<!-- Header -->
<div class="mb-3 text-center">
    <h2 class="mb-1">Módulo de Marketing</h2>
    <p class="text-muted mb-0">Gestiona campañas, pools de correos y clientes.</p>
</div>

<!-- Alertas -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mb-3">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mb-3">@TempData["Error"]</div>
}

<!-- Tabs en tarjeta -->
<div class="card card-lg">
    <div class="card-header p-0">
        <ul class="nav nav-tabs card-header-tabs nav-fill" id="marketingTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active"
                        id="camp-tab"
                        data-bs-toggle="tab"
                        data-bs-target="#camp"
                        type="button"
                        role="tab"
                        aria-controls="camp"
                        aria-selected="true">
                    Campañas <span class="badge bg-success ms-1">@campCount</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link"
                        id="pool-tab"
                        data-bs-toggle="tab"
                        data-bs-target="#pool"
                        type="button"
                        role="tab"
                        aria-controls="pool"
                        aria-selected="false">
                    Pools de Correos <span class="badge bg-success ms-1">@poolCount</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link"
                        id="clientes-tab"
                        data-bs-toggle="tab"
                        data-bs-target="#clientes"
                        type="button"
                        role="tab"
                        aria-controls="clientes"
                        aria-selected="false">
                    Clientes <span class="badge bg-success ms-1">@cliCount</span>
                </button>
            </li>
        </ul>
    </div>

    <div class="card-body">
        <div class="tab-content mt-2">
            <div class="tab-pane fade show active" id="camp" role="tabpanel" aria-labelledby="camp-tab">
                @await Html.PartialAsync("_CampanasPartial", Model.Campanias)
            </div>
            <div class="tab-pane fade" id="pool" role="tabpanel" aria-labelledby="pool-tab">
                @await Html.PartialAsync("_PoolsPartial", Model.Pools)
            </div>
            <div class="tab-pane fade" id="clientes" role="tabpanel" aria-labelledby="clientes-tab">
                @await Html.PartialAsync("_ClientesPartial", Model.Clientes)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
