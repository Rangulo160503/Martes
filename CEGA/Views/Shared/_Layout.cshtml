@* Views/Shared/_Layout.cshtml *@
@using Microsoft.AspNetCore.Http
@{
    var currentController = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLowerInvariant();
    var currentAction = (ViewContext.RouteData.Values["action"]?.ToString() ?? "").ToLowerInvariant();
    Func<string, string?, string> active = (ctrl, act) =>
    {
        bool matchCtrl = string.Equals(currentController, ctrl?.ToLowerInvariant(), StringComparison.OrdinalIgnoreCase);
        bool matchAct = string.IsNullOrEmpty(act) || string.Equals(currentAction, act?.ToLowerInvariant(), StringComparison.OrdinalIgnoreCase);
        return (matchCtrl && matchAct) ? "active" : "";
    };
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CEGA</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CEGA.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- SIDEBAR -->
    <aside id="sidebar" class="sidebar d-flex flex-column p-3">
        <h4 class="text-white text-center mb-4">CEGA</h4>

        <a class="nav-link @active("home", "index")" asp-controller="Home" asp-action="Index">Inicio</a>
        <a class="nav-link @active("home", "privacy")" asp-controller="Home" asp-action="Privacy">Privacidad</a>

        <hr class="bg-light" />

        <a class="nav-link @active("account", null)" asp-controller="Account" asp-action="GestionUsuarios">Gestión de Usuarios</a>

        <hr class="bg-light" />

        <a class="nav-link @active("empleados", null)" asp-controller="Empleados" asp-action="Empleados">Empleados</a>

        <hr class="bg-light" />

        <a class="nav-link @active("marketing", null)" asp-controller="Marketing" asp-action="Marketing">Marketing</a>

        <hr class="bg-light" />

        <!-- Módulo de Contabilidad -->
        <div class="text-white small fw-bold px-3 mt-2">Contabilidad</div>
        <a class="nav-link nav-subitem @active("contabilidad", "ingresos")" asp-controller="Contabilidad" asp-action="Ingresos">Ingresos</a>
        <a class="nav-link nav-subitem @active("contabilidad", "egresos")" asp-controller="Contabilidad" asp-action="Egresos">Egresos</a>
        <a class="nav-link nav-subitem @active("cierrediario", "index")" asp-controller="CierreDiario" asp-action="Index">Cierres Diarios</a>
        <a class="nav-link nav-subitem @active("cierres", "historialcierresrango")" asp-controller="Cierres" asp-action="HistorialCierresRango">Reportes Financieros</a>

        <hr class="bg-light" />

        <!-- Módulo de Reportería -->
        <div class="text-white small fw-bold px-3 mt-2">Reportería</div>
        <a class="nav-link nav-subitem @active("reporteincapacidad", "index")" asp-controller="ReporteIncapacidad" asp-action="Index">Incapacidades</a>
        <a class="nav-link nav-subitem @active("reporteincidente", "listar")" asp-controller="ReporteIncidente" asp-action="Listar">Incidentes</a>
        <a class="nav-link nav-subitem @active("reporteentradasalida", "listar")" asp-controller="ReporteEntradaSalida" asp-action="Listar">Entradas / Salidas</a>

        <hr class="bg-light" />

        <!-- Módulo de Seguimiento -->
        <div class="text-white small fw-bold px-3 mt-2">Seguimiento</div>
        <a class="nav-link nav-subitem @active("proyecto", "index")" asp-controller="Proyecto" asp-action="Index">Proyectos</a>
        <a class="nav-link nav-subitem @active("proyecto", "crear")" asp-controller="Proyecto" asp-action="Crear">Crear Proyecto</a>
        <a class="nav-link nav-subitem @active("proyecto", "buscar")" asp-controller="Proyecto" asp-action="Buscar">Buscar Proyecto</a>

        <a class="nav-link nav-subitem @active("tarea", "index")" asp-controller="Tarea" asp-action="Index">Ver Tareas</a>
        <a class="nav-link nav-subitem @active("tarea", "crear")" asp-controller="Tarea" asp-action="Crear">Crear Tarea</a>
        <a class="nav-link nav-subitem @active("tarea", "buscar")" asp-controller="Tarea" asp-action="Buscar">Buscar Tarea</a>
        <a class="nav-link nav-subitem @active("tarea", "asignarempleado")" asp-controller="Tarea" asp-action="AsignarEmpleado">Asignar Empleado</a>
        <a class="nav-link nav-subitem @active("tarea", "reporteconsolidado")" asp-controller="Tarea" asp-action="ReporteConsolidado">Reporte Consolidado</a>

        <a class="nav-link nav-subitem @active("comentario", "index")" asp-controller="Comentario" asp-action="Index">Ver Comentarios</a>
        <a class="nav-link nav-subitem @active("comentario", "crear")" asp-controller="Comentario" asp-action="Crear">Agregar Comentario</a>
        <a class="nav-link nav-subitem @active("comentario", "buscar")" asp-controller="Comentario" asp-action="Buscar">Buscar Comentario</a>

        <hr class="bg-light" />

        <!-- Módulo de Documentos PDF -->
        <div class="text-white small fw-bold px-3 mt-2">Módulo PDF</div>
        <a class="nav-link nav-subitem @active("pdf", "listaplanos")" asp-controller="Pdf" asp-action="ListaPlanos">Lista de Planos</a>
        <a class="nav-link nav-subitem @active("pdf", "subirplano")" asp-controller="Pdf" asp-action="SubirPlano">Subir Plano</a>
        <a class="nav-link nav-subitem @active("pdf", "compararplanos")" asp-controller="Pdf" asp-action="CompararPlanos">Comparar Planos</a>

        <hr class="bg-light" />

        <!-- Cuenta actual -->
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <div class="px-3 text-white small">
                <div class="fw-bold mb-1">Hola @User.Identity.Name</div>
                <a class="nav-link nav-subitem @active("account", "editprofile")" asp-controller="Account" asp-action="EditProfile">Editar Perfil</a>
                <a class="nav-link nav-subitem @active("account", "forgotpassword")" asp-controller="Account" asp-action="ForgotPassword">Recuperar Contraseña</a>
                <form asp-controller="Account" asp-action="Logout" method="post" class="mt-2">
                    <button type="submit" class="btn btn-sm btn-accent w-100">Cerrar sesión</button>
                </form>
            </div>
        }
        else
        {
            <div class="px-3 text-white small">
                <a class="nav-link @active("account", "login")" asp-controller="Account" asp-action="Login">Iniciar sesión</a>
                <a class="nav-link @active("account", "register")" asp-controller="Account" asp-action="Register">Registrarse</a>
            </div>
        }
    </aside>

    <!-- CONTENIDO -->
    <div class="main-content">
        <!-- Topbar con botón de menú para móvil -->
        <div class="d-md-none d-flex align-items-center justify-content-between px-3 py-2" style="background: var(--surface); border-bottom:1px solid var(--border);">
            <button id="menuToggle" class="btn btn-outline-primary btn-sm" type="button" aria-label="Abrir menú">☰ Menú</button>
            <span class="fw-semibold">@ViewData["Title"]</span>
        </div>

        <main role="main" class="container pb-3">
            @RenderBody()
        </main>

        <footer class="mt-auto">
            &copy; 2025 - CEGA - <a asp-controller="Home" asp-action="Privacy">Política de privacidad</a>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Mostrar/Ocultar sidebar en pantallas pequeñas
        (function () {
            const btn = document.getElementById('menuToggle');
            const sidebar = document.getElementById('sidebar');
            if (btn && sidebar) {
                btn.addEventListener('click', function () {
                    if (getComputedStyle(sidebar).display === 'none') {
                        sidebar.style.display = 'flex';
                        sidebar.style.position = 'fixed';
                        sidebar.style.zIndex = '1050';
                        sidebar.style.height = '100vh';
                        sidebar.style.top = '0';
                        sidebar.style.left = '0';
                    } else {
                        sidebar.removeAttribute('style');
                    }
                });
            }
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
