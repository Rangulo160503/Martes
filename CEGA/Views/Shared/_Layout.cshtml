@* Views/Shared/_Layout.cshtml *@
@using Microsoft.AspNetCore.Http
@{
    var currentController = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLowerInvariant();
    var currentAction = (ViewContext.RouteData.Values["action"]?.ToString() ?? "").ToLowerInvariant();
    Func<string, string?, string> active = (ctrl, act) =>
    {
        bool matchCtrl = string.Equals(currentController, ctrl?.ToLowerInvariant(), StringComparison.OrdinalIgnoreCase);
        bool matchAct = string.IsNullOrEmpty(act) || string.Equals(currentAction, act?.ToLowerInvariant(), StringComparison.OrdinalIgnoreCase);
        return (matchCtrl && matchAct) ? "active" : "";
    };
}

@functions{
    // Abre automáticamente el colapsable si el controller actual pertenece al módulo
    bool IsAny(params string[] ctrls)
    {
        var curr = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLowerInvariant();
        return ctrls.Any(c => string.Equals(curr, c.ToLowerInvariant(), StringComparison.OrdinalIgnoreCase));
    }
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CEGA</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CEGA.styles.css" asp-append-version="true" />

    <style>
        /* Opcional: estilos para los toggles tipo "hamburguesa" por módulo */
        .menu-toggle {
            background: transparent;
            border: 0;
            text-align: left;
            padding: .65rem .85rem;
            color: #fff;
            width: 100%;
            border-radius: .5rem;
        }
        .menu-toggle:hover { background: var(--brand-mid); color: var(--accent); }
        .menu-toggle .caret {
            display: inline-block;
            width: .6rem; height: .6rem;
            border-right: 2px solid currentColor;
            border-bottom: 2px solid currentColor;
            transform: rotate(-45deg);
            transition: transform .2s ease;
            margin-left: .5rem;
        }
        .menu-toggle[aria-expanded="true"] .caret {
            transform: rotate(45deg);
        }
    </style>
</head>
<body>
    <!-- SIDEBAR -->
    <aside id="sidebar" class="sidebar d-flex flex-column p-3">
        <h4 class="text-white text-center mb-4">CEGA</h4>

        <a class="nav-link @active("home", "index")" asp-controller="Home" asp-action="Index">Inicio</a>

        <hr class="bg-light" />

        <!-- Gestión de Usuarios (simple) -->
        <a class="nav-link @active("account", "listausuarios")"
           asp-controller="Account" asp-action="ListaUsuarios">
            Gestión de Usuarios
        </a>

        <hr class="bg-light" />

        <!-- Empleados (simple) -->
        <a class="nav-link @active("empleados", null)" asp-controller="Empleados" asp-action="Empleados">Empleados</a>

        <hr class="bg-light" />

        <!-- Marketing (simple) -->
        <a class="nav-link @active("marketing", null)" asp-controller="Marketing" asp-action="Marketing">Marketing</a>

        <hr class="bg-light" />

        <!-- Contabilidad (COLLAPSE) -->
        @{
            var openConta = IsAny("contabilidad", "cierrediario", "cierres");
        }
        <button class="nav-link d-flex align-items-center justify-content-between menu-toggle"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#mod-conta"
                aria-expanded="@(openConta.ToString().ToLower())"
                aria-controls="mod-conta">
            <span>Contabilidad</span>
            <span class="caret"></span>
        </button>
        <div id="mod-conta" class="collapse @(openConta ? "show" : "")">
            <nav class="nav flex-column ps-3">
                <a class="nav-link nav-subitem @active("contabilidad", "ingresos")" asp-controller="Contabilidad" asp-action="Ingresos">Ingresos</a>
                <a class="nav-link nav-subitem @active("contabilidad", "egresos")" asp-controller="Contabilidad" asp-action="Egresos">Egresos</a>
                <a class="nav-link nav-subitem @active("cierrediario", "index")" asp-controller="CierreDiario" asp-action="Index">Cierres Diarios</a>
                <a class="nav-link nav-subitem @active("cierres", "historialcierresrango")"
                   asp-controller="CierreDiario" asp-action="HistorialCierresRango">
                    Reportes Financieros
                </a>
            </nav>
        </div>

        <hr class="bg-light" />

        <!-- Reportería (COLLAPSE) -->
        @{
            var openReport = IsAny("reporteincapacidad", "reporteincidente", "reporteentradasalida");
        }
        <button class="nav-link d-flex align-items-center justify-content-between menu-toggle"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#mod-reporte"
                aria-expanded="@(openReport.ToString().ToLower())"
                aria-controls="mod-reporte">
            <span>Reportería</span>
            <span class="caret"></span>
        </button>
        <div id="mod-reporte" class="collapse @(openReport ? "show" : "")">
            <nav class="nav flex-column ps-3">
                <a class="nav-link nav-subitem @active("reporteincapacidad", "index")"
                   asp-controller="ReporteIncapacidad" asp-action="Index">Incapacidades</a>

            </nav>
        </div>

        <hr class="bg-light" />
        <!-- Seguimiento (COLLAPSE con submenús) -->
        @{
            var openSegProy = currentController == "proyecto"
            && new[] { "index", "crear", "buscar" }.Contains(currentAction);

            var openSegTarea = currentController == "tarea"
            && new[] { "index", "crear", "buscar", "asignarempleado", "reporteconsolidado" }.Contains(currentAction);

            var openSegCom = currentController == "comentario"
            && new[] { "index", "crear", "buscar" }.Contains(currentAction);

            var openSeg = openSegProy || openSegTarea || openSegCom;
        }
        <button class="nav-link d-flex align-items-center justify-content-between menu-toggle"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#mod-seg"
                aria-expanded="@(openSeg.ToString().ToLower())"
                aria-controls="mod-seg">
            <span>Seguimiento</span>
            <span class="caret"></span>
        </button>

        <div id="mod-seg" class="collapse @(openSeg ? "show" : "")">
            <nav class="nav flex-column ps-3">

                <!-- Proyectos (simple) -->
                <a class="nav-link @active("proyecto", "index")"
                   asp-controller="Proyecto"
                   asp-action="Index">
                    Proyectos
                </a>
                <!-- Tareas (simple) -->
                <a class="nav-link @active("tarea", "index")"
                   asp-controller="Tarea"
                   asp-action="Index">
                    Tareas
                </a>

            </nav>
        </div>

        <hr class="bg-light" />

        <!-- Módulo PDF (COLLAPSE) -->
        @{
            var openPdf = IsAny("pdf");
        }
        <button class="nav-link d-flex align-items-center justify-content-between menu-toggle"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#mod-pdf"
                aria-expanded="@(openPdf.ToString().ToLower())"
                aria-controls="mod-pdf">
            <span>Módulo PDF</span>
            <span class="caret"></span>
        </button>
        <div id="mod-pdf" class="collapse @(openPdf ? "show" : "")">
            <nav class="nav flex-column ps-3">
                <a class="nav-link nav-subitem @active("pdf", "listaplanos")" asp-controller="Pdf" asp-action="ListaPlanos">Lista de Planos</a>
                <a class="nav-link nav-subitem @active("pdf", "subirplano")" asp-controller="Pdf" asp-action="SubirPlano">Subir Plano</a>
                <a class="nav-link nav-subitem @active("pdf", "compararplanos")" asp-controller="Pdf" asp-action="CompararPlanos">Comparar Planos</a>
            </nav>
        </div>

        <hr class="bg-light" />

        <!-- Cuenta actual -->
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            var openAccount = currentController == "account"
            && new[] { "editprofile", "forgotpassword", "login", "register" }
            .Contains(currentAction);
            <button class="nav-link d-flex align-items-center justify-content-between menu-toggle"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mod-account"
                    aria-expanded="@(openAccount.ToString().ToLower())"
                    aria-controls="mod-account">
                <span>Mi Cuenta</span>
                <span class="caret"></span>
            </button>
            <div id="mod-account" class="collapse @(openAccount ? "show" : "")">
                <div class="px-3 text-white small">
                    <div class="fw-bold mb-1">Hola @User.Identity.Name</div>
                    <a class="nav-link nav-subitem @active("account", "editprofile")" asp-controller="Account" asp-action="EditProfile">Editar Perfil</a>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="mt-2">
                        <button type="submit" class="btn btn-sm btn-accent w-100">Cerrar sesión</button>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="px-3 text-white small">
                <a class="nav-link @active("account", "login")" asp-controller="Account" asp-action="Login">Iniciar sesión</a>
                <a class="nav-link @active("account", "register")" asp-controller="Account" asp-action="Register">Registrarse</a>
            </div>
        }
    </aside>

    <!-- CONTENIDO -->
    <div class="main-content">
        <!-- Topbar con botón de menú para móvil -->
        <div class="d-md-none d-flex align-items-center justify-content-between px-3 py-2" style="background: var(--surface); border-bottom:1px solid var(--border);">
            <button id="menuToggle" class="btn btn-outline-primary btn-sm" type="button" aria-label="Abrir menú">☰ Menú</button>
            <span class="fw-semibold">@ViewData["Title"]</span>
        </div>

        @RenderSection("Hero", required: false)

        <main role="main" class="container pb-3">
            @RenderBody()
        </main>

            @RenderSection("CallToAction", required: false)

        <footer class="mt-auto">
            &copy; 2025 - CEGA - <a asp-controller="Home" asp-action="Privacy">Política de privacidad</a>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Mostrar/Ocultar sidebar en pantallas pequeñas
        (function () {
            const btn = document.getElementById('menuToggle');
            const sidebar = document.getElementById('sidebar');
            if (btn && sidebar) {
                btn.addEventListener('click', function () {
                    if (getComputedStyle(sidebar).display === 'none') {
                        sidebar.style.display = 'flex';
                        sidebar.style.position = 'fixed';
                        sidebar.style.zIndex = '1050';
                        sidebar.style.height = '100vh';
                        sidebar.style.top = '0';
                        sidebar.style.left = '0';
                    } else {
                        sidebar.removeAttribute('style');
                    }
                });
            }
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
