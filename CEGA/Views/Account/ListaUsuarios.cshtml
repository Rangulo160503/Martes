@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Identity
@inject UserManager<CEGA.Models.ApplicationUser> UserManager

@model CEGA.Models.BuscarUsuarioFiltroViewModel
@{
    ViewData["Title"] = "Buscar usuarios por nombre y rol";
    var count = Model?.UsuariosFiltrados?.Count() ?? 0;
}

<!-- Header -->
<div class="mb-3 text-center">
    <h2 class="mb-0">Usuarios Registrados</h2>
    <p class="text-muted mb-0">Filtra por nombre, correo, usuario o rol.</p>
</div>

<!-- Filtros -->
<div class="card card-lg mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Parámetros de búsqueda</span>
        <span class="text-muted small">@(count) resultado(s)</span>
    </div>
    <div class="card-body">
        <form method="get" asp-action="ListaUsuarios" class="row g-3" novalidate>
            <div class="col-md-6">
                <label for="filtroTexto" class="form-label">Texto</label>
                <input id="filtroTexto"
                       name="filtroTexto"
                       class="form-control"
                       placeholder="Nombre, correo o usuario"
                       value="@Model?.FiltroTexto" />
            </div>
            <div class="col-md-4">
                <label for="rolSeleccionado" class="form-label">Rol</label>
                <select asp-for="RolSeleccionado"
                        class="form-select"
                        asp-items="@(new SelectList(Model?.RolesDisponibles ?? new List<string>(), Model?.RolSeleccionado))">
                    <option value="">-- Filtrar por rol --</option>
                </select>

            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-accent w-100">Buscar</button>
            </div>
        </form>
    </div>
</div>

<!-- Alertas -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mb-3">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mb-3">@TempData["Error"]</div>
}

<!-- Resultados -->
@if (Model?.UsuariosFiltrados != null && Model.UsuariosFiltrados.Any())
{
    <div class="card">
        <div class="card-header">Resultados</div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Email</th>
                            <th>Usuario</th>
                            <th>Teléfono</th>
                            <th>Rol</th>
                            <th>Sub-rol</th>
                            <th style="width:190px;">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model.UsuariosFiltrados)
                        {
                            var roles = await UserManager.GetRolesAsync(usuario);
                            <tr>
                                <td>@usuario.Nombre</td>
                                <td>@usuario.Apellido</td>
                                <td class="text-truncate" style="max-width:240px;">@usuario.Email</td>
                                <td>@usuario.UserName</td>
                                <td>@usuario.PhoneNumber</td>
                                <td>@string.Join(", ", roles)</td>
                                <td>
                                    @(roles.Contains("Empleado") ? usuario.SubRol ?? "(Sin sub-rol)" : "-")
                                </td>
                                <td>
                                    <div class="d-flex flex-wrap gap-2">
                                        <a asp-action="AsignarRol"
                                           asp-route-id="@usuario.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            Asignar Rol
                                        </a>
                                        <form asp-action="EliminarUsuario"
                                              method="post"
                                              asp-route-id="@usuario.Id"
                                              class="d-inline"
                                              onsubmit="return confirm('¿Estás seguro que deseas eliminar este usuario?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">No se encontraron usuarios con los filtros aplicados.</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
