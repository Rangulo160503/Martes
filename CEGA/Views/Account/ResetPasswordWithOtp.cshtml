@using CEGA.Models.ViewModels
@model ResetPwdVM
@{
    ViewData["Title"] = "Nueva contraseña";
}
<div class="mb-3 text-center">
    <h2 class="mb-0">Crear nueva contraseña</h2>
    <p class="text-muted mb-0">Define tu nueva contraseña para continuar.</p>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mb-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p class="mb-0">@error.ErrorMessage</p>
        }
    </div>
}

<div class="card card-lg auth-card mx-auto">
    <div class="card-header text-center">Nueva contraseña</div>
    <div class="card-body">
        <form asp-action="ResetPasswordWithOtp" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="UserId" />
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label">Nueva contraseña</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirmación</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success w-100">Cambiar contraseña</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
