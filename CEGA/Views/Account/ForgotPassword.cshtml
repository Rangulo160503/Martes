@model CEGA.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Recuperar contraseña";
}

<!-- Header de página -->
<div class="mb-3 text-center">
    <h2 class="mb-0">Recuperar contraseña</h2>
    <p class="text-muted mb-0">Ingresa tu correo y te enviaremos instrucciones para restablecer tu acceso.</p>
</div>

<!-- Errores de validación -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mb-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p class="mb-0">@error.ErrorMessage</p>
        }
    </div>
}

<div class="card card-lg auth-card mx-auto">
    <div class="card-header text-center">Restablecer acceso</div>
    <div class="card-body">
        <form asp-action="ForgotPassword" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Correo electrónico</label>
                <input asp-for="Email" class="form-control" placeholder="correo@empresa.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-accent w-100">Enviar correo</button>

            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary w-100">Volver a iniciar sesión</a>
            </div>

            <div class="mt-3 text-muted text-center">
                <small>Si no encuentras el correo, revisa tu carpeta de spam o intenta nuevamente.</small>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
