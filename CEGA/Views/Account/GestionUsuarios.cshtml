@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<!-- Header -->
<div class="mb-3 text-center">
    <h2 class="mb-0">👥 Gestión de Usuarios</h2>
    <p class="text-muted mb-0">Accede rápidamente a filtros, eliminación y asignación de roles.</p>
</div>

<!-- Alertas -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mb-3">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mb-3">@TempData["Error"]</div>
}

<!-- Acciones -->
<div class="row g-3 justify-content-center">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-1">🔍 Filtrar Usuarios</h5>
                <p class="text-muted mb-3">Busca por nombre, correo, rol o estado.</p>
                <div class="mt-auto">
                    <a asp-action="ListaUsuarios" class="btn btn-accent w-100">Abrir filtro</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-1">🗑️ Eliminar Usuarios</h5>
                <p class="text-muted mb-3">Gestiona bajas de cuentas. <strong>Acción irreversible.</strong></p>
                <div class="mt-auto">
                    <a asp-action="ListaUsuarios" class="btn btn-danger w-100">Gestionar eliminaciones</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-1">🛡️ Asignar Rol a Usuario</h5>
                <p class="text-muted mb-3">Agrega o cambia roles y permisos de usuario.</p>
                <div class="mt-auto">
                    <a asp-action="ListaUsuarios" class="btn btn-outline-primary w-100">Asignar roles</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Nota -->
<div class="text-muted text-center mt-5">
    <small>Desde aquí puedes acceder a todas las funcionalidades administrativas de usuarios.</small>
</div>
