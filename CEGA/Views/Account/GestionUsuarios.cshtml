@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container">
    <h2 class="text-center mb-4">👥 Gestión de Usuarios</h2>

    <div class="row justify-content-center gap-3">

        <div class="col-md-4">
            <a asp-action="ListaUsuarios" class="btn btn-outline-primary w-100">
                🔍 Filtrar Usuarios
            </a>
        </div>

        <div class="col-md-4">
            <a asp-action="ListaUsuarios" class="btn btn-outline-danger w-100">
                🗑️ Eliminar Usuarios
            </a>
        </div>

        <div class="col-md-4">
            <a asp-action="ListaUsuarios" class="btn btn-outline-secondary w-100">
                🛡️ Asignar Rol a Usuario
            </a>
        </div>

    </div>

    <div class="text-muted text-center mt-5">
        <small>Desde aquí puedes acceder a todas las funcionalidades administrativas de usuarios.</small>
    </div>
</div>
