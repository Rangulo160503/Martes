@model CEGA.Models.AsignarRolViewModel
@{
    ViewData["Title"] = "Asignar rol a usuario";
    var isEmpleado = string.Equals(Model?.RolSeleccionado, "Empleado", StringComparison.OrdinalIgnoreCase);
}

<!-- Encabezado -->
<div class="mb-3">
    <h2 class="mb-1">Asignar rol</h2>
    <p class="text-muted mb-0">Actualiza el rol y, cuando corresponda, el sub-rol del usuario.</p>
</div>

<!-- Resumen de usuario -->
<div class="card card-lg mb-3">
    <div class="card-header">Usuario</div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Correo</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Rol actual</dt>
            <dd class="col-sm-9">
                <span class="badge bg-primary">@Model.RolSeleccionado</span>
                @if (!string.IsNullOrWhiteSpace(Model.SubRol))
                {
                    <span class="badge bg-secondary ms-2">@Model.SubRol</span>
                }
            </dd>
        </dl>
    </div>
</div>

<!-- Formulario -->
<div class="card">
    <div class="card-header">Asignación</div>
    <div class="card-body">
        <form asp-action="AsignarRol" method="post" class="row g-3" novalidate>
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="UsuarioId" />
            <input type="hidden" asp-for="Email" />

            <div class="col-md-6">
                <label asp-for="RolSeleccionado" class="form-label">Rol</label>
                <select asp-for="RolSeleccionado"
                        asp-items="@(new SelectList(Model.RolesDisponibles))"
                        class="form-select"
                        id="rol-select">
                </select>
                <div class="form-text">Si eliges <strong>Empleado</strong>, podrás definir un sub-rol.</div>
                <span asp-validation-for="RolSeleccionado" class="text-danger"></span>
            </div>

            <div class="col-md-6" id="subrol-container" style="display:@(isEmpleado ? "block" : "none")">
                <label asp-for="SubRol" class="form-label">Sub-rol</label>
                <select asp-for="SubRol"
                        asp-items="@(new SelectList(Model.SubRolesDisponibles))"
                        class="form-select"
                        id="subrol-select">
                </select>
                <span asp-validation-for="SubRol" class="text-danger"></span>
            </div>

            <div class="col-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-accent">Guardar cambios</button>
                <a asp-action="ListaUsuarios" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const rolSelect = document.getElementById("rol-select");
            const subrolContainer = document.getElementById("subrol-container");
            const subrolSelect = document.getElementById("subrol-select");

            function toggleSubRol() {
                const isEmpleado = (rolSelect.value || "").toLowerCase() === "empleado";
                subrolContainer.style.display = isEmpleado ? "block" : "none";
                if (subrolSelect) subrolSelect.disabled = !isEmpleado;
                if (!isEmpleado && subrolSelect) subrolSelect.selectedIndex = -1;
            }

            rolSelect.addEventListener("change", toggleSubRol);
            toggleSubRol(); // al cargar
        })();
    </script>
}
