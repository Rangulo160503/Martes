@model List<CEGA.Models.ReporteIncapacidad>

@{
    ViewData["Title"] = "Buscar Reporte de Incapacidades";
    var mensaje = TempData["Mensaje"] as string;
}

<h2>@ViewData["Title"]</h2>

<form method="get" asp-action="Buscar">
    <div class="form-group">
        <label>Nombre del Reporte</label>
        <input type="text" name="nombre" class="form-control" value="@Context.Request.Query["nombre"]" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Buscar</button>
</form>

@if (!string.IsNullOrEmpty(mensaje))
{
    <div class="alert alert-warning mt-3">@mensaje</div>
}
else if (Model != null && Model.Any())
{
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Rol</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NombreReporte</td>
                    <td>@item.RolSeleccionado</td>
                    <td>@item.FechaInicio.ToShortDateString()</td>
                    <td>@item.FechaFin.ToShortDateString()</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
