@model IEnumerable<CEGA.Models.IncapacidadEmpleado>

@{
    ViewData["Title"] = "Reportes de Incapacidades";
    Func<string, string> BadgeClase = estado =>
    {
        if (string.IsNullOrWhiteSpace(estado)) return "bg-secondary";
        return estado.Equals("Aprobado", StringComparison.OrdinalIgnoreCase) ? "bg-success"
             : estado.Equals("Rechazado", StringComparison.OrdinalIgnoreCase) ? "bg-danger"
             : "bg-warning";
    };
    var count = Model?.Count() ?? 0;
}

<!-- Header -->
<div class="mb-3">
    <h2 class="mb-0">Reportes de Incapacidades</h2>
    <p class="text-muted mb-0">Gestión y consulta de incapacidades registradas.</p>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mb-3">@TempData["Mensaje"]</div>
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Listado</span>
        <div class="d-flex align-items-center gap-3">
            <span class="text-muted small">@count registro(s)</span>

            <!-- Ajusta esta ruta si quieres llevar al módulo de Empleados o a un “Crear” específico -->
            <a asp-controller="Empleados"
               asp-action="Empleados"
               class="btn btn-accent btn-sm">
                + Registrar incapacidad
            </a>
        </div>
    </div>

    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="m-3 alert alert-warning mb-0">No hay incapacidades registradas.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead>
                        <tr>
                            <th style="min-width:160px;">Usuario</th>
                            <th style="min-width:260px;">Descripción</th>
                            <th style="min-width:120px;">Archivo</th>
                            <th style="min-width:120px;">Estado</th>
                            <th style="min-width:120px;">Fecha</th>
                            <th style="width:180px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model.OrderByDescending(x => x.FechaPresentacion))
                        {
                            var badge = BadgeClase(i.Estado);
                            <tr>
                                <td class="fw-semibold">@i.UsuarioID</td>
                                <td class="text-truncate" style="max-width:420px;">@i.Descripcion</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(i.ArchivoRuta))
                                    {
                                        <a href="@i.ArchivoRuta" target="_blank" class="btn btn-sm btn-outline-primary">Ver</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin archivo</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @badge">@(!string.IsNullOrWhiteSpace(i.Estado) ? i.Estado : "—")</span>
                                </td>
                                <td>@i.FechaPresentacion.ToShortDateString()</td>
                                <td>
                                    <div class="d-flex flex-wrap gap-2">
                                        <!-- Ajusta estas rutas según tus acciones reales si deseas permitir edición/eliminación -->
                                        <a asp-controller="ReporteIncapacidad"
                                           asp-action="Editar"
                                           asp-route-id="@i.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            Editar
                                        </a>
                                        <a asp-controller="ReporteIncapacidad"
                                           asp-action="Eliminar"
                                           asp-route-id="@i.Id"
                                           class="btn btn-sm btn-danger"
                                           onclick="return confirm('¿Eliminar este registro de incapacidad?');">
                                            Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
