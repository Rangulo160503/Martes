@model IEnumerable<CEGA.Models.IncapacidadEmpleado>

@{
    ViewData["Title"] = "Reportes de Incapacidades";

    // Como el modelo no tiene "Estado", dejamos un helper neutro por si quieres mantener la badge en UI
    Func<string, string> BadgeClase = estado =>
    {
        if (string.IsNullOrWhiteSpace(estado)) return "bg-secondary";
        return estado.Equals("Aprobado", StringComparison.OrdinalIgnoreCase) ? "bg-success"
             : estado.Equals("Rechazado", StringComparison.OrdinalIgnoreCase) ? "bg-danger"
             : "bg-warning";
    };

    var count = Model?.Count() ?? 0;

    string FormatBytes(long? bytes)
    {
        if (bytes == null) return "—";
        double b = bytes.Value; string[] u = { "B", "KB", "MB", "GB" }; int i = 0;
        while (b >= 1024 && i < u.Length - 1) { b /= 1024; i++; }
        return $"{b:0.##} {u[i]}";
    }
}

<!-- Header con fondo -->
<div class="py-4 text-center text-white mb-4"
     style="background: var(--brand-mid); border-radius: .75rem;">
    <h2 class="fw-bold mb-3">Reportes de Incapacidades</h2>
    <p class="mb-0 fs-5">
        Gestión y consulta de <span class="fw-semibold">incapacidades</span> registradas.
    </p>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mb-3">@TempData["Mensaje"]</div>
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Listado</span>
        <div class="d-flex align-items-center gap-3">
            <span class="text-muted small">@count registro(s)</span>
        </div>
    </div>

    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="m-3 alert alert-warning mb-0">No hay incapacidades registradas.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead>
                        <tr>
                            <th style="min-width:160px;">ID</th>
                            <th style="min-width:260px;">Descripción</th>
                            <th style="min-width:160px;">Archivo</th>
                        </tr>
                    </thead>
                </table>
            </div>
        }
    </div>
</div>