@model List<CEGA.Models.ReporteIncapacidad>

@{
    ViewData["Title"] = "Reportes Generados";
}

<!-- Header -->
<div class="mb-3">
    <h2 class="mb-0">Reportes de Incapacidades</h2>
    <p class="text-muted mb-0">Gestión de incapacidades por rol y rango de fechas.</p>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mb-3">@TempData["Mensaje"]</div>
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Listado</span>
        <a asp-controller="ReporteIncapacidad"
           asp-action="Crear"
           class="btn btn-accent btn-sm">
            + Agregar nueva incapacidad
        </a>
    </div>

    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="m-3 alert alert-warning mb-0">No hay reportes registrados.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Rol</th>
                            <th style="min-width:120px;">Inicio</th>
                            <th style="min-width:120px;">Fin</th>
                            <th style="width:180px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NombreReporte</td>
                                <td>@item.RolSeleccionado</td>
                                <td>@item.FechaInicio.ToShortDateString()</td>
                                <td>@item.FechaFin.ToShortDateString()</td>
                                <td>
                                    <div class="d-flex flex-wrap gap-2">
                                        <a asp-action="Editar"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            Editar
                                        </a>
                                        <a asp-action="Eliminar"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-danger">
                                            Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
