@model List<CEGA.Models.ReporteIncapacidad>

@{
    ViewData["Title"] = "Reportes Generados";
}

<h2>Reportes de Incapacidades</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<a asp-action="Crear" class="btn btn-primary mb-3">Agregar nueva incapacidad</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Rol</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NombreReporte</td>
                <td>@item.RolSeleccionado</td>
                <td>@item.FechaInicio.ToShortDateString()</td>
                <td>@item.FechaFin.ToShortDateString()</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
