@model CEGA.Models.ViewModels.CierresRangoViewModel
@{
    ViewData["Title"] = "Historial de Cierres por Rango";
}

<!-- Header -->
<div class="mb-3">
    <h2 class="mb-0">Historial de Cierres por Rango</h2>
    <p class="text-muted mb-0">Consulta los cierres entre dos fechas y revisa ingresos, egresos y balance.</p>
</div>

<!-- Filtros -->
<div class="card card-lg mb-3">
    <div class="card-header">Parámetros</div>
    <div class="card-body">
        <form asp-action="HistorialCierresRango" method="post" class="row g-3" novalidate>
            @Html.AntiForgeryToken()

            <div class="col-sm-6 col-md-4">
                <label class="form-label">Desde</label>
                <input asp-for="FechaInicio" type="date" class="form-control" />
            </div>

            <div class="col-sm-6 col-md-4">
                <label class="form-label">Hasta</label>
                <input asp-for="FechaFin" type="date" class="form-control" />
            </div>

            <div class="col-12 d-flex gap-2">
                <button class="btn btn-accent" type="submit">Buscar</button>
                <a asp-action="HistorialCierresRango" class="btn btn-outline-primary">Limpiar</a>
            </div>
        </form>
    </div>
</div>

<!-- Validación -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-warning mb-3">
        <div asp-validation-summary="All" class="mb-0"></div>
    </div>
}

<!-- Resultados -->
@if (Model?.Cierres?.Any() == true)
{
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Resultados</span>
            <span class="text-muted small">@Model.Cierres.Count() registro(s)</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th class="text-end">Total Ingresos</th>
                            <th class="text-end">Total Egresos</th>
                            <th class="text-end">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model.Cierres)
                        {
                            var positivo = c.BalanceFinal >= 0;
                            <tr>
                                <td>@c.Fecha.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">@c.TotalIngresos.ToString("C")</td>
                                <td class="text-end">@c.TotalEgresos.ToString("C")</td>
                                <td class="text-end">
                                    @if (positivo)
                                    {
                                        <span class="badge bg-success">@c.BalanceFinal.ToString("C")</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@c.BalanceFinal.ToString("C")</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        @{
                            var totalIng = Model.Cierres.Sum(x => x.TotalIngresos);
                            var totalEgr = Model.Cierres.Sum(x => x.TotalEgresos);
                            var totalBal = Model.Cierres.Sum(x => x.BalanceFinal);
                            var balPos = totalBal >= 0;
                        }
                        <tr>
                            <th class="text-end">Totales</th>
                            <th class="text-end">@totalIng.ToString("C")</th>
                            <th class="text-end">@totalEgr.ToString("C")</th>
                            <th class="text-end">
                                @if (balPos)
                                {
                                    <span class="badge bg-success">@totalBal.ToString("C")</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@totalBal.ToString("C")</span>
                                }
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">No hay cierres en el rango.</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
