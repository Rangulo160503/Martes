@model List<CEGA.Models.CierreDiario>
@{
    ViewData["Title"] = "Cierres Diarios";
}

<!-- Header de página -->
<div class="mb-3">
    <h2 class="mb-0">Cierres Diarios</h2>
    <p class="text-muted mb-0">Registro de ingresos, egresos y balance por día.</p>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mb-3">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mb-3">@TempData["Error"]</div>
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Histórico</span>
        <form asp-action="Registrar" method="post" class="m-0">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-accent btn-sm">
                Registrar cierre de hoy
            </button>
        </form>
    </div>

    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="m-3 alert alert-warning mb-0">No hay cierres registrados.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th class="text-end">Total Ingresos</th>
                            <th class="text-end">Total Egresos</th>
                            <th class="text-end">Balance Final</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cierre in Model)
                        {
                            var positivo = cierre.BalanceFinal >= 0;
                            <tr>
                                <td>@cierre.Fecha.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">@cierre.TotalIngresos.ToString("C")</td>
                                <td class="text-end">@cierre.TotalEgresos.ToString("C")</td>
                                <td class="text-end">
                                    @if (positivo)
                                    {
                                        <span class="badge bg-success">@cierre.BalanceFinal.ToString("C")</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@cierre.BalanceFinal.ToString("C")</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        @{
                            var totalIng = Model.Sum(x => x.TotalIngresos);
                            var totalEgr = Model.Sum(x => x.TotalEgresos);
                            var totalBal = Model.Sum(x => x.BalanceFinal);
                            var balPos = totalBal >= 0;
                        }
                        <tr>
                            <th class="text-end">Totales</th>
                            <th class="text-end">@totalIng.ToString("C")</th>
                            <th class="text-end">@totalEgr.ToString("C")</th>
                            <th class="text-end">
                                @if (balPos)
                                {
                                    <span class="badge bg-success">@totalBal.ToString("C")</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@totalBal.ToString("C")</span>
                                }
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
    </div>
</div>
