@model List<CEGA.Models.CierreRango>
@{
    ViewData["Title"] = "Historial de Cierres por Rango";
}

<h2>📋 Historial de Cierres por Rango</h2>

@if (Model.Count == 0)
{
    <p>No hay cierres registrados aún.</p>
}
else
{
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Total Ingresos</th>
                <th>Total Egresos</th>
                <th>Balance Final</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cierre in Model)
            {
                <tr>
                    <td>@cierre.FechaInicio.ToString("g")</td>
                    <td>@cierre.FechaFin.ToString("g")</td>
                    <td>@cierre.TotalIngresos.ToString("C")</td>
                    <td>@cierre.TotalEgresos.ToString("C")</td>
                    <td>@cierre.BalanceFinal.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
