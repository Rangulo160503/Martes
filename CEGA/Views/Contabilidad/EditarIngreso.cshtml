@model CEGA.Models.Ingreso

<h4>Editar Ingreso</h4>
<form asp-action="EditarIngreso" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Monto</label>
        <input asp-for="Monto" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Fecha</label>
        <input asp-for="Fecha" class="form-control" type="datetime-local" required />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Descripción</label>
        <input asp-for="Descripcion" class="form-control" required />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Contabilidad" class="btn btn-secondary">Cancelar</a>
</form>
