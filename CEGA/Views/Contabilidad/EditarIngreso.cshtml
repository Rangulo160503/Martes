@model CEGA.Models.Ingreso
@{
    ViewData["Title"] = "Editar ingreso";
}

<div class="mb-3">
    <h4 class="mb-1">Editar ingreso</h4>
    <p class="text-muted mb-0">Actualiza el monto, la fecha y la descripción.</p>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="EditarIngreso" asp-controller="Contabilidad" method="post" class="row g-3" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="col-md-4">
                <label asp-for="Monto" class="form-label">Monto</label>
                <div class="input-group">
                    <span class="input-group-text">₡</span>
                    <input asp-for="Monto" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                </div>
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Fecha" class="form-label">Fecha</label>
                <input asp-for="Fecha" class="form-control" type="datetime-local" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción del ingreso"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-accent">Guardar</button>

                <!-- Cancelar: vuelve al listado de Ingresos -->
                <a asp-controller="Contabilidad"
                   asp-action="Ingresos"
                   class="btn btn-outline-secondary">
                    Cancelar
                </a>

                @* Alternativa si quieres forzar por URL (sin Tag Helpers):
                <button type="button"
                        class="btn btn-outline-secondary"
                        onclick="window.location.href='@Url.Action("Ingresos","Contabilidad")'">
                    Cancelar
                </button>
                *@
            </div>

            <div class="col-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
