@model CEGA.Models.Egreso

@{
    ViewData["Title"] = "Editar Egreso";
}

<h4>Editar Egreso</h4>
<form asp-action="EditarEgreso" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Monto</label>
        <input asp-for="Monto" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Fecha</label>
        <input asp-for="Fecha" class="form-control" type="datetime-local" required />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Concepto</label>
        <input asp-for="Concepto" class="form-control" required />
        <span asp-validation-for="Concepto" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Egresos" class="btn btn-secondary">Cancelar</a>
</form>
