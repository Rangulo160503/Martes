@model CEGA.Models.EgresoViewModel

@{
    ViewData["Title"] = "Egresos";
    var count = Model?.ListaEgresos?.Count ?? 0;
    var total = Model?.ListaEgresos?.Sum(e => e.Monto) ?? 0m;
}

<!-- Header con fondo -->
<div class="py-4 text-center text-white mb-4"
     style="background: var(--brand-mid); border-radius: .75rem;">
    <h2 class="fw-bold mb-3">Egresos</h2>
    <p class="mb-0 fs-5">
        Registra y administra los <span class="fw-semibold">egresos</span>
        por <span class="fw-semibold">fecha</span> y <span class="fw-semibold">concepto</span>.
    </p>
</div>

<!-- Alertas -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mb-3">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mb-3">@TempData["Error"]</div>
}

<!-- Registrar egreso -->
<div class="card card-lg mb-3">
    <div class="card-header">Registrar egreso</div>
    <div class="card-body">
        <form asp-action="CrearEgreso" method="post" class="row g-3" novalidate>
            @Html.AntiForgeryToken()

            <div class="col-md-3">
                <label asp-for="NuevoEgreso.Monto" class="form-label">Monto</label>
                <input asp-for="NuevoEgreso.Monto" class="form-control" placeholder="0.00" type="number" step="0.01" required />
                <span asp-validation-for="NuevoEgreso.Monto" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="NuevoEgreso.Fecha" class="form-label">Fecha</label>
                <input asp-for="NuevoEgreso.Fecha" class="form-control" type="datetime-local" required />
                <span asp-validation-for="NuevoEgreso.Fecha" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="NuevoEgreso.Concepto" class="form-label">Concepto</label>
                <input asp-for="NuevoEgreso.Concepto" class="form-control" placeholder="Descripción del egreso" required />
                <span asp-validation-for="NuevoEgreso.Concepto" class="text-danger"></span>
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-accent w-100">Agregar</button>
            </div>
        </form>
    </div>
</div>

<!-- Listado -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Egresos registrados</span>
        <div class="text-muted small">
            <span class="me-3">@count registro(s)</span>
            <span>Total: <strong>@total.ToString("C")</strong></span>
        </div>
    </div>

    <div class="card-body p-0">
        @if (Model?.ListaEgresos == null || !Model.ListaEgresos.Any())
        {
            <div class="m-3 alert alert-warning mb-0">No hay egresos registrados.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th class="text-end">Monto</th>
                            <th style="min-width:160px;">Fecha</th>
                            <th>Concepto</th>
                            <th style="width:180px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var egreso in Model.ListaEgresos)
                        {
                            <tr>
                                <td class="text-end">@egreso.Monto.ToString("C")</td>
                                <td>@egreso.Fecha.ToString("g")</td>
                                <td class="text-truncate" style="max-width:420px;">@egreso.Concepto</td>
                                <td>
                                    <div class="d-flex flex-wrap gap-2">
                                        <a asp-action="EditarEgreso"
                                           asp-route-id="@egreso.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            Editar
                                        </a>
                                        <a asp-action="EliminarEgreso"
                                           asp-route-id="@egreso.Id"
                                           class="btn btn-sm btn-danger"
                                           onclick="return confirm('¿Estás seguro de eliminar este egreso?');">
                                            Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th class="text-end">@total.ToString("C")</th>
                            <th colspan="3" class="text-muted">Total</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
