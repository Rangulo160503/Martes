@model CEGA.Models.EgresoViewModel

@{
    ViewData["Title"] = "Egresos";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h4>Registrar Egreso</h4>
<form asp-action="CrearEgreso" method="post" class="row g-2 mb-4">
    <div class="col-md-3">
        <input asp-for="NuevoEgreso.Monto" class="form-control" placeholder="Monto" type="number" step="0.01" required />
        <span asp-validation-for="NuevoEgreso.Monto" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <input asp-for="NuevoEgreso.Fecha" class="form-control" type="datetime-local" required />
        <span asp-validation-for="NuevoEgreso.Fecha" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <input asp-for="NuevoEgreso.Concepto" class="form-control" placeholder="Concepto" required />
        <span asp-validation-for="NuevoEgreso.Concepto" class="text-danger"></span>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-warning w-100">Agregar</button>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Monto</th>
            <th>Fecha</th>
            <th>Concepto</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var egreso in Model.ListaEgresos)
        {
            <tr>
                <td>@egreso.Monto.ToString("C")</td>
                <td>@egreso.Fecha.ToString("g")</td>
                <td>@egreso.Concepto</td>
                <td>
                    <a asp-action="EditarEgreso" asp-route-id="@egreso.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="EliminarEgreso" asp-route-id="@egreso.Id" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de eliminar este egreso?');">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
