@model CEGA.Models.ContabilidadViewModel
@{
    ViewData["Title"] = "Contabilidad";
}

<h2>📊 Módulo de Contabilidad</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<hr />
<h4>➕ Registrar Ingreso</h4>
<form asp-action="CrearIngreso" method="post" class="row g-2 mb-4">
    <div class="col-md-3">
        <input asp-for="NuevoIngreso.Monto" class="form-control" placeholder="Monto" type="number" step="0.01" required />
    </div>
    <div class="col-md-3">
        <input asp-for="NuevoIngreso.Fecha" class="form-control" type="datetime-local" required />
    </div>
    <div class="col-md-4">
        <input asp-for="NuevoIngreso.Descripcion" class="form-control" placeholder="Descripción" required />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-success w-100">Agregar Ingreso</button>
    </div>
</form>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Monto</th>
            <th>Fecha</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ingreso in Model.ListaIngresos)
        {
            <tr>
                <td>@ingreso.Monto.ToString("C")</td>
                <td>@ingreso.Fecha.ToString("g")</td>
                <td>@ingreso.Descripcion</td>
                <td>
                    <a asp-action="EditarIngreso" asp-route-id="@ingreso.Id" class="btn btn-sm btn-primary">✏️</a>
                    <a asp-action="EliminarIngreso" asp-route-id="@ingreso.Id" class="btn btn-sm btn-danger">🗑️</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />
<h4>➖ Registrar Egreso</h4>
<form asp-action="CrearEgreso" method="post" class="row g-2 mb-4">
    <div class="col-md-3">
        <input asp-for="NuevoEgreso.Monto" class="form-control" placeholder="Monto" type="number" step="0.01" required />
    </div>
    <div class="col-md-3">
        <input asp-for="NuevoEgreso.Fecha" class="form-control" type="datetime-local" required />
    </div>
    <div class="col-md-4">
        <input asp-for="NuevoEgreso.Concepto" class="form-control" placeholder="Concepto" required />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-warning w-100">Agregar Egreso</button>
    </div>
</form>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Monto</th>
            <th>Fecha</th>
            <th>Concepto</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var egreso in Model.ListaEgresos)
        {
            <tr>
                <td>@egreso.Monto.ToString("C")</td>
                <td>@egreso.Fecha.ToString("g")</td>
                <td>@egreso.Concepto</td>
                <td>
                    <a asp-action="EditarEgreso" asp-route-id="@egreso.Id" class="btn btn-sm btn-primary">✏️</a>
                    <a asp-action="EliminarEgreso" asp-route-id="@egreso.Id" class="btn btn-sm btn-danger">🗑️</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
