@model CEGA.Models.ContabilidadViewModel

@{
    ViewData["Title"] = "Ingresos";
    var count = Model?.ListaIngresos?.Count ?? 0;
    var total = Model?.ListaIngresos?.Sum(i => i.Monto) ?? 0m;
}

<!-- Header -->
<div class="mb-3">
    <h2 class="mb-0">Registrar Ingreso</h2>
    <p class="text-muted mb-0">Agrega nuevos ingresos y revisa el histórico.</p>
</div>

<!-- Alertas -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mb-3">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mb-3">@TempData["Error"]</div>
}

<!-- Formulario -->
<div class="card card-lg mb-3">
    <div class="card-header">Nuevo ingreso</div>
    <div class="card-body">
        <form asp-action="CrearIngreso" method="post" class="row g-3" novalidate>
            @Html.AntiForgeryToken()

            <div class="col-md-6">
                <label asp-for="NuevoIngreso.Descripcion" class="form-label">Descripción</label>
                <input asp-for="NuevoIngreso.Descripcion" class="form-control" placeholder="Ej: Pago cliente ACME" />
                <span asp-validation-for="NuevoIngreso.Descripcion" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="NuevoIngreso.Monto" class="form-label">Monto</label>
                <input asp-for="NuevoIngreso.Monto" type="number" step="0.01" inputmode="decimal" class="form-control" placeholder="0.00" />
                <span asp-validation-for="NuevoIngreso.Monto" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="NuevoIngreso.Fecha" class="form-label">Fecha</label>
                <input asp-for="NuevoIngreso.Fecha" type="date" class="form-control" />
                <span asp-validation-for="NuevoIngreso.Fecha" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-accent">Registrar</button>
                <a asp-action="Index" class="btn btn-outline-primary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<!-- Listado -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Lista de ingresos</span>
        <div class="text-muted small">
            <span class="me-3">@count registro(s)</span>
            <span>Total: <strong>@total.ToString("C")</strong></span>
        </div>
    </div>

    <div class="card-body p-0">
        @if (Model?.ListaIngresos == null || !Model.ListaIngresos.Any())
        {
            <div class="m-3 alert alert-warning mb-0">No hay ingresos registrados.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Descripción</th>
                            <th class="text-end">Monto</th>
                            <th style="min-width:140px;">Fecha</th>
                            <th style="width:180px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ingreso in Model.ListaIngresos)
                        {
                            <tr>
                                <td class="text-truncate" style="max-width:420px;">@ingreso.Descripcion</td>
                                <td class="text-end">@ingreso.Monto.ToString("C")</td>
                                <td>@ingreso.Fecha.ToShortDateString()</td>
                                <td>
                                    <div class="d-flex flex-wrap gap-2">
                                        <a asp-action="EditarIngreso"
                                           asp-route-id="@ingreso.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            Editar
                                        </a>
                                        <a asp-action="EliminarIngreso"
                                           asp-route-id="@ingreso.Id"
                                           class="btn btn-sm btn-danger"
                                           onclick="return confirm('¿Estás seguro de eliminar este ingreso?');">
                                            Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th class="text-end" colspan="4">
                                Total: <strong>@total.ToString("C")</strong>
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
