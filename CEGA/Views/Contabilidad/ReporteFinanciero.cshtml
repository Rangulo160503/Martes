@model CEGA.Models.ViewModels.ReporteFinancieroViewModel
@{
    ViewData["Title"] = "Reporte Financiero";
}

<h2 class="text-center mb-4">📊 Reporte Financiero</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="ReporteFinanciero" method="post" class="row g-3 mb-4">
    <div class="col-md-3">
        <label class="form-label">Periodo</label>
        <select asp-for="Periodo" class="form-select" id="periodo">
            <option value="0">Rango manual</option>
            <option value="1">Semana actual</option>
            <option value="2">Mes actual</option>
            <option value="3">Año actual</option>
        </select>
    </div>
    <div class="col-md-3">
        <label class="form-label">Fecha Inicio</label>
        <input asp-for="FechaInicio" class="form-control" type="date" id="ini" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Fecha Fin</label>
        <input asp-for="FechaFin" class="form-control" type="date" id="fin" />
    </div>
    <div class="col-md-3 align-self-end">
        <button type="submit" class="btn btn-primary w-100">Generar Reporte</button>
    </div>
</form>

@if (Model.Ingresos.Any() || Model.Egresos.Any())
{
    <div class="mb-3 d-flex gap-2">
        <form asp-action="ExportarPDF" method="post" class="d-inline">
            <input type="hidden" name="fechaInicio" value="@Model.FechaInicio.ToString("yyyy-MM-dd")" />
            <input type="hidden" name="fechaFin" value="@Model.FechaFin.ToString("yyyy-MM-dd")" />
            <button class="btn btn-outline-success">📄 Exportar PDF</button>
        </form>

        <button class="btn btn-outline-info" disabled title="Pendiente">📊 Exportar Excel</button>
    </div>

    <div class="mb-2">
        <strong>Desde:</strong> @Model.FechaInicio:dd/MM/yyyy
        &nbsp;|&nbsp;
        <strong>Hasta:</strong> @Model.FechaFin.AddDays(-1):dd/MM/yyyy
        &nbsp;|&nbsp;
        <strong>Total Ingresos:</strong> @Model.Ingresos.Sum(x => x.Monto).ToString("C")
        &nbsp;|&nbsp;
        <strong>Total Egresos:</strong> @Model.Egresos.Sum(x => x.Monto).ToString("C")
        &nbsp;|&nbsp;
        <strong>Balance:</strong> @(Model.Ingresos.Sum(x => x.Monto) - Model.Egresos.Sum(x => x.Monto)).ToString("C")
    </div>

    <h4>💰 Ingresos</h4>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Monto</th>
                <th>Fecha</th>
                <th>Descripción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ingreso in Model.Ingresos)
            {
                <tr>
                    <td>@ingreso.Monto.ToString("C")</td>
                    <td>@ingreso.Fecha.ToString("g")</td>
                    <td>@ingreso.Descripcion</td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="mt-4">💸 Egresos</h4>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Monto</th>
                <th>Fecha</th>
                <th>Concepto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var egreso in Model.Egresos)
            {
                <tr>
                    <td>@egreso.Monto.ToString("C")</td>
                    <td>@egreso.Fecha.ToString("g")</td>
                    <td>@egreso.Concepto</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model.FechaInicio != default && Model.FechaFin != default)
{
    <div class="alert alert-info">
        No se encontraron ingresos ni egresos en el rango seleccionado.
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const periodo = document.getElementById('periodo');
        const ini = document.getElementById('ini');
        const fin = document.getElementById('fin');
        function toggleFechas() {
            const esRango = periodo.value === "0";
            ini.disabled = !esRango;
            fin.disabled = !esRango;
        }
        periodo.addEventListener('change', toggleFechas);
        toggleFechas();
    </script>
}
