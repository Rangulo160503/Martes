@model IEnumerable<CEGA.Models.ViewModels.CuentaBancaria>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span class="fw-semibold">Cuentas bancarias</span>
        <a asp-action="AgregarCuenta" asp-controller="Contabilidad" class="btn btn-sm btn-outline-secondary">Agregar</a>
    </div>
    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="p-3 text-muted">No hay cuentas registradas.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>Banco</th>
                            <th>Número</th>
                            <th>Moneda</th>
                            <th class="text-end">Saldo</th>
                            <th>Actualizado</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr>
                                <td>@c.Banco</td>
                                <td>@c.Numero</td>
                                <td>@c.Moneda</td>
                                <td class="text-end">@c.Saldo:N2</td>
                                <td><small class="text-muted">@c.ActualizadoEn.ToString("yyyy-MM-dd HH:mm")</small></td>
                                <td class="text-end">
                                    <a asp-action="Conciliar" asp-route-id="@c.Id" class="btn btn-sm btn-link">Conciliar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
