@model CEGA.Models.ViewModels.ResultadoComparacionVM
@{
    ViewData["Title"] = "Resultado de Comparación";
}

<h2 class="mb-2">Comparación de Planos</h2>

<div class="d-flex gap-3 flex-wrap">
    <div class="flex-grow-1" style="min-width:380px;">
        <div class="fw-semibold text-center mb-2">@Model.Titulo1</div>
        <iframe src="@($"{Model.Src1}#toolbar=1&navpanes=0")"
                style="width:100%; height:80vh; border:1px solid var(--border);"
                loading="lazy">
        </iframe>
    </div>

    <div class="flex-grow-1" style="min-width:380px;">
        <div class="fw-semibold text-center mb-2">@Model.Titulo2</div>
        <iframe src="@($"{Model.Src2}#toolbar=1&navpanes=0")"
                style="width:100%; height:80vh; border:1px solid var(--border);"
                loading="lazy">
        </iframe>
    </div>
</div>

<a asp-action="CompararPlanos" class="btn btn-outline-secondary mt-3">Volver</a>
