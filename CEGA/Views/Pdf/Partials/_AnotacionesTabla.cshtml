@model IEnumerable<CEGA.Models.ViewModels.Pdf.AnotacionRowVM>

<div class="card">
    <div class="card-header fw-semibold d-flex justify-content-between align-items-center">
        <span>Anotaciones</span>
        <div class="d-flex align-items-center gap-2">
            <small class="text-muted">Mostrando @Model.Count() registro(s)</small>
            <a asp-controller="Pdf" asp-action="CrearAnotacion" class="btn btn-sm btn-primary">
                Nueva anotación
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-sm align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:110px;">Anotación n.º</th>   @* IdAnotacion *@
                    <th style="width:90px;">PDF n.º</th>          @* IdPdf *@
                    <th style="width:150px;">Cédula empleado</th> @* Cedula *@
                    <th>Anotación</th>                            @* Texto *@
                    @* si tienes CRUD: <th style="width:150px;" class="text-end">Acciones</th> *@
                </tr>
            </thead>
            <tbody>
                @if (Model?.Any() == true)
                {
                    foreach (var r in Model)
                    {
                        <tr>
                            <td>@r.IdAnotacion</td>
                            <td>@r.IdPdf</td>
                            <td>@r.Cedula</td>
                            <td class="text-break">
                                @((r.Texto ?? "").Length > 180 ? (r.Texto!.Substring(0, 180) + "…") : r.Texto)
                            </td>
                            @* si tienes CRUD, vuelve a poner aquí tus botones Editar/Eliminar *@
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-muted small">Sin anotaciones.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
