@model CEGA.Models.ViewModels.Pdf.ComparacionResumenAsociacionesVM
@{
    var L = Model?.Izquierdo ?? new CEGA.Models.ViewModels.Pdf.ResumenAsociacionesVM();
    var R = Model?.Derecho ?? new CEGA.Models.ViewModels.Pdf.ResumenAsociacionesVM();

    L.Anotaciones ??= new List<string>();
    R.Anotaciones ??= new List<string>();
}

<div class="card">
    <div class="card-header fw-semibold">Comparación de PDFs</div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <h6 class="mb-2">Izquierda: @L.PdfNombre</h6>
                <div class="small text-muted mb-2">Anotaciones: @L.TotalAnotaciones</div>
                @if (L.Anotaciones.Any())
                {
                    <ul class="small mb-0">
                        @foreach (var a in L.Anotaciones)
                        {
                            <li>@a</li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-muted small">Sin anotaciones.</div>
                }
            </div>
            <div class="col-md-6">
                <h6 class="mb-2">Derecha: @R.PdfNombre</h6>
                <div class="small text-muted mb-2">Anotaciones: @R.TotalAnotaciones</div>
                @if (R.Anotaciones.Any())
                {
                    <ul class="small mb-0">
                        @foreach (var a in R.Anotaciones)
                        {
                            <li>@a</li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-muted small">Sin anotaciones.</div>
                }
            </div>
        </div>
    </div>
</div>
