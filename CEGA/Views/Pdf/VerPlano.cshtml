@model CEGA.Models.ViewModels.Pdf.PdfVisorVM
@{
    ViewData["Title"] = Model.Titulo;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">@Model.Titulo</h4>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary btn-sm" asp-action="Index">Volver</a>
        <a class="btn btn-primary btn-sm" href="@Model.DescargarUrl">Descargar</a>
    </div>
</div>

<div class="border rounded" style="height: calc(100vh - 220px);">
    <iframe src="@Model.VerUrl" title="@Model.Titulo" width="100%" height="100%" style="border:0;"></iframe>
</div>
