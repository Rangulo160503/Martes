@model List<CEGA.Models.TareaProyecto>
@{
    ViewData["Title"] = "Tareas sin asignar";
}

<h2>Tareas sin asignar — Proyecto: @ViewBag.ProyectoNombre</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        Este proyecto no tiene tareas sin asignar.
    </div>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre Tarea</th>
                <th>Detalles</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.NombreTarea</td>
                    <td>@t.Detalles</td>
                    <td>@t.FechaInicio.ToString("yyyy-MM-dd")</td>
                    <td>@t.FechaFin.ToString("yyyy-MM-dd")</td>
                    <td class="d-flex gap-1">
                        <a asp-action="AsignarEmpleado" asp-route-tareaId="@t.Id" class="btn btn-sm btn-primary">Asignar</a>
                        <a asp-action="Editar" asp-route-id="@t.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@t.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="VerAsignaciones" asp-route-proyectoId="@ViewBag.ProyectoId" class="btn btn-outline-secondary">
        Ver asignaciones del proyecto
    </a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
}
