@model List<CEGA.Models.TareasProyecto>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">No hay tareas registradas.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover mb-0">
            <thead>
                <tr>
                    <th>Proyecto</th>
                    <th>Nombre</th>
                    <th>Detalles</th>
                    <th>Inicio</th>
                    <th>Fin</th>
                    <th style="width:160px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.Proyecto?.Nombre</td>
                        <td>@t.NombreTarea</td>
                        <td class="text-truncate" style="max-width:420px;">@t.Detalles</td>
                        <td>@t.FechaInicio.ToString("yyyy-MM-dd")</td>
                        <td>@t.FechaFin.ToString("yyyy-MM-dd")</td>
                        <td class="d-flex flex-wrap gap-2">
                            <a class="btn btn-sm btn-outline-primary" asp-action="Editar" asp-route-id="@t.Id">Editar</a>
                            <a class="btn btn-sm btn-danger" asp-action="Eliminar" asp-route-id="@t.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
