@model IEnumerable<CEGA.Models.TareasProyecto>
@{
    ViewData["Title"] = "Buscar Tarea";
}

<!-- Header de página -->
<div class="mb-3">
    <h2 class="mb-0">Buscar Tarea</h2>
    <p class="text-muted mb-0">Filtra por nombre, detalles o proyecto.</p>
</div>

<!-- Filtros -->
<div class="card card-lg mb-3">
    <div class="card-header">Parámetros de búsqueda</div>
    <div class="card-body">
        <form method="get" asp-action="Buscar" class="row g-3" novalidate>
            <input type="hidden" name="proyectoId" value="@(ViewBag.ProyectoId ?? "")" />
            <div class="col-md-8">
                <input name="q"
                       value="@ViewBag.Q"
                       class="form-control"
                       placeholder="Nombre, detalles o proyecto..." />
            </div>
            <div class="col-md-4 d-flex gap-2">
                <button class="btn btn-accent" type="submit">Buscar</button>
                <a asp-action="Index" class="btn btn-outline-primary">Volver</a>
            </div>
        </form>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">No se encontraron tareas.</div>
}
else
{
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Resultados</span>
            <!-- espacio para futuros filtros avanzados/exportación -->
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Proyecto</th>
                            <th>Nombre Tarea</th>
                            <th>Detalles</th>
                            <th style="min-width:120px;">Inicio</th>
                            <th style="min-width:120px;">Fin</th>
                            <th style="width:240px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model)
                        {
                            <tr>
                                <td>@t.Proyecto?.Nombre</td>
                                <td>@t.NombreTarea</td>
                                <td class="text-truncate" style="max-width: 420px;">@t.Detalles</td>
                                <td>@t.FechaInicio.ToString("yyyy-MM-dd")</td>
                                <td>@t.FechaFin.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="d-flex flex-wrap gap-2">
                                        <a asp-action="AsignarEmpleado"
                                           asp-route-tareaId="@t.Id"
                                           class="btn btn-sm btn-accent">
                                            Asignar
                                        </a>
                                        <a asp-action="Editar"
                                           asp-route-id="@t.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            Editar
                                        </a>
                                        <a asp-action="Eliminar"
                                           asp-route-id="@t.Id"
                                           class="btn btn-sm btn-danger">
                                            Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
