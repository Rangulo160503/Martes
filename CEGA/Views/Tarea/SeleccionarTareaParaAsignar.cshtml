@model CEGA.Models.ViewModels.SeleccionarTareaVM
@{
    ViewData["Title"] = "Seleccionar tarea para asignar";
}
<h2>Seleccionar tarea para asignar</h2>

<form asp-action="SeleccionarTareaParaAsignar" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <div class="col-md-6">
        <label asp-for="TareaId" class="form-label">Tarea</label>
        <select asp-for="TareaId" class="form-select" asp-items="ViewBag.Tareas">
            <option value="">— Selecciona una tarea —</option>
        </select>
        <span asp-validation-for="TareaId" class="text-danger"></span>
    </div>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Continuar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </div>
</form>