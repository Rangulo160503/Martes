@model List<CEGA.Models.AsignacionTareaEmpleado>

@{
    ViewData["Title"] = "Asignaciones del Proyecto";
}

<h2>Asignaciones para el proyecto: @ViewBag.ProyectoNombre</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay asignaciones para el criterio seleccionado.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Proyecto</th>
                <th>Tarea</th>
                <th>Empleado</th>
                <th>Comentario</th>
                <th>Fecha asignación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var asignacion in Model)
            {
                <tr>
                    <td>@asignacion.Tarea?.Proyecto?.Nombre</td>
                    <td>@asignacion.Tarea?.NombreTarea</td>
                    <td>@asignacion.Usuario?.UserName</td>
                    <td>@(string.IsNullOrWhiteSpace(asignacion.Comentario) ? "—" : asignacion.Comentario)</td>
                    <td>@asignacion.FechaAsignacion.ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="d-flex gap-1">
                        <a asp-action="EditarAsignacion" asp-route-id="@asignacion.Id" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="EliminarAsignacion" asp-route-id="@asignacion.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}