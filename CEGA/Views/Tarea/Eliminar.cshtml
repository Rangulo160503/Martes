@model CEGA.Models.TareasProyecto

@{
    ViewData["Title"] = "Eliminar Tarea";
}

<h2>¿Desea eliminar esta tarea?</h2>

<div>
    <p><strong>Nombre:</strong> @Model.NombreTarea</p>
    <p><strong>Detalles:</strong> @Model.Detalles</p>
    <p><strong>Proyecto:</strong> @Model.Proyecto?.Nombre</p>
</div>

<form asp-action="ConfirmarEliminacion" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <button type="submit" name="confirmar" value="true" class="btn btn-danger">Sí, eliminar</button>
    <button type="submit" name="confirmar" value="false" class="btn btn-secondary">No, cancelar</button>
</form>
