@model List<CEGA.Models.ViewModels.EmpleadoTareasVM>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">No hay asignaciones a empleados.</div>
}
else
{
    <div class="accordion" id="accEmpleados">
        @for (int i = 0; i < Model.Count; i++)
        {
            var e = Model[i];
            <div class="accordion-item">
                <h2 class="accordion-header" id="h-@i">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#c-@i">
                        @e.Nombre <span class="badge bg-secondary ms-2">@e.Cantidad</span>
                    </button>
                </h2>
                <div id="c-@i" class="accordion-collapse collapse" data-bs-parent="#accEmpleados">
                    <div class="accordion-body p-0">
                        @await Html.PartialAsync("_TareasTodasPartial", e.Tareas)
                    </div>
                </div>
            </div>
        }
    </div>
}
