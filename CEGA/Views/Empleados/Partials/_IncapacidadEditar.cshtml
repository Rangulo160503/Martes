    @model int 
    @* cedula *@
<form asp-controller="Empleados" asp-action="ActualizarIncapacidad"
      method="post" enctype="multipart/form-data" data-modal-post>
    @Html.AntiForgeryToken()
    <input type="hidden" name="cedula" value="@Model" />

    <div class="mb-3">
        <label class="form-label">Archivo de incapacidad</label>
        <input type="file" name="archivo" class="form-control" required />
        <div class="form-text">Seleccione el archivo para reemplazar el existente.</div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
    </div>
</form>
