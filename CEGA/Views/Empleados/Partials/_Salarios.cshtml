@using System.Globalization
@model IEnumerable<CEGA.Models.Puesto>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning mb-0">No hay puestos para mostrar.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th style="width:10%">Código</th>
                    <th style="width:30%">Puesto</th>
                    <th style="width:20%">Salario base</th>
                    <th style="width:15%">Moneda</th>
                    <th style="width:25%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    var formId = $"f-{p.Id}";
                    <tr>
                        <td>@(p.Codigo ?? "—")</td>
                        <td>@p.Nombre</td>

                        <!-- Inputs asociados al form por atributo 'form' -->
                        <td>
                            <input form="@formId"
                                   name="salarioBase"
                                   type="number"
                                   step="0.01"
                                   min="0"
                                   class="form-control form-control-sm"
                                   value="@(p.SalarioBase?.ToString("0.00", CultureInfo.InvariantCulture) ?? "0.00")" />
                        </td>
                        <td>
                            <input form="@formId"
                                   name="moneda"
                                   class="form-control form-control-sm"
                                   maxlength="10"
                                   value="@(string.IsNullOrWhiteSpace(p.Moneda) ? "CRC" : p.Moneda)" />
                        </td>

                        <!-- El form vive en UNA sola celda -->
                        <td class="text-end">
                            <form id="@formId"
                                  asp-controller="Puesto"
                                  asp-action="ActualizarSalario"
                                  method="post"
                                  class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@p.Id" />
                                <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
                                <a asp-controller="Empleados" asp-action="Index" class="btn btn-sm btn-outline-secondary">Cancelar</a>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
