@model CEGA.Models.ComentarioProyecto

@{
    ViewData["Title"] = "Agregar Comentario";
}

<!-- Header de página -->
<div class="mb-3">
    <h2 class="mb-0">Agregar comentario al proyecto</h2>
    <p class="text-muted mb-0">Complete los detalles del comentario y asígnele un nombre descriptivo.</p>
</div>

<div class="card card-lg">
    <div class="card-header">Nuevo comentario</div>
    <div class="card-body">
        <form asp-action="Crear" method="post" class="row g-3" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ProyectoId" value="@ViewBag.ProyectoId" />

            <div class="col-12">
                <label class="form-label">Proyecto</label>
                <input class="form-control" value="@ViewBag.ProyectoNombre" disabled />
            </div>

            <div class="col-12">
                <label asp-for="NombreComentario" class="form-label"></label>
                <input asp-for="NombreComentario" class="form-control" placeholder="Ej: Revisión inicial de planos" />
                <span asp-validation-for="NombreComentario" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Detalles" class="form-label"></label>
                <textarea asp-for="Detalles" class="form-control" rows="3" placeholder="Agregue detalles adicionales del comentario..."></textarea>
                <span asp-validation-for="Detalles" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button class="btn btn-accent" type="submit">Guardar</button>
                <a asp-controller="Proyecto" asp-action="SeleccionarProyectoParaComentario" class="btn btn-outline-primary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
