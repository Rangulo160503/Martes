@model CEGA.Models.ComentarioProyecto

<h2>Agregar comentario al proyecto</h2>

<form asp-action="Crear" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProyectoId" value="@ViewBag.ProyectoId" />

    <div class="col-12">
        <label class="form-label">Proyecto</label>
        <input class="form-control" value="@ViewBag.ProyectoNombre" disabled />
    </div>

    <div class="col-12">
        <label asp-for="NombreComentario" class="form-label"></label>
        <input asp-for="NombreComentario" class="form-control" />
        <span asp-validation-for="NombreComentario" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Detalles" class="form-label"></label>
        <textarea asp-for="Detalles" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Detalles" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button class="btn btn-success" type="submit">Guardar</button>
        <a asp-controller="Proyecto" asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
