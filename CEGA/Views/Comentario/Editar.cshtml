@model CEGA.Models.ComentariosProyecto

@{
    ViewData["Title"] = "Editar Comentario";
}

<h2>Editar Comentario</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ProyectoId" />

    <div>
        <label>Nombre del Comentario</label>
        <input asp-for="NombreComentario" />
        <span asp-validation-for="NombreComentario" class="text-danger"></span>
    </div>

    <div>
        <label>Detalles</label>
        <textarea asp-for="Detalles"></textarea>
        <span asp-validation-for="Detalles" class="text-danger"></span>
    </div>

    <button type="submit">Guardar Cambios</button>
</form>

@if (!ViewData.ModelState.IsValid && ViewData.ModelState[""].Errors.Count > 0)
{
    <p class="text-danger">@ViewData.ModelState[""].Errors[0].ErrorMessage</p>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
