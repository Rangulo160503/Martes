@model List<CEGA.Models.ComentarioProyecto>

@{
    ViewData["Title"] = "Listado de Comentarios";
}

<h2>Listado de Comentarios</h2>

<div class="mb-3">
    <a class="btn btn-success" asp-action="Crear">Agregar Comentario</a>
    <a class="btn btn-info" asp-action="Buscar">Buscar Comentario</a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Proyecto</th>
                <th>Nombre Comentario</th>
                <th>Detalles</th>
                <th>Fecha de Creación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comentario in Model)
            {
                <tr>
                    <td>@comentario.Proyecto?.Nombre</td>
                    <td>@comentario.NombreComentario</td>
                    <td>@comentario.Detalles</td>
                    <td>@comentario.FechaCreacion.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Editar" asp-route-id="@comentario.Id">Editar</a>
                        <a class="btn btn-sm btn-danger" asp-action="Eliminar" asp-route-id="@comentario.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay comentarios registrados.</p>
}
