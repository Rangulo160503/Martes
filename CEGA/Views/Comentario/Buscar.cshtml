@{
    ViewData["Title"] = "Buscar Comentario";
}

<!-- Header de página -->
<div class="mb-4 pb-3 border-bottom">
    <h2 class="fw-bold mb-1">Buscar Comentario en Proyecto</h2>
    <p class="text-muted mb-0 fs-5">
        Ingrese el nombre del comentario para localizarlo dentro del proyecto.
    </p>
</div>

<div class="card card-lg">
    <div class="card-header">Parámetros de búsqueda</div>
    <div class="card-body">
        <form asp-action="Buscar" method="post" novalidate>
            <input type="hidden" name="proyectoId" value="@ViewBag.ProyectoId" />

            <div class="mb-3">
                <label for="nombreComentario" class="form-label">Nombre del Comentario</label>
                <input type="text" name="nombreComentario" id="nombreComentario" class="form-control" placeholder="Ej: Revisión de planos eléctricos" />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-accent">Buscar</button>
                <a asp-controller="Comentario" asp-action="Index" class="btn btn-outline-primary">Volver</a>
            </div>
        </form>
    </div>
</div>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Mensaje</div>
}
