@model CEGA.Models.ViewModels.Usuarios.BuscarUsuarioFiltroViewModel
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="content-cega">
    <h2 class="mb-4 fw-bold" style="color: var(--brand);">Gestión de Usuarios</h2>

    <!-- Filtros -->
    <form method="get" class="row g-3 mb-4">
        <div class="col-md-4">
            <input type="text" name="query" value="@Model.Query"
                   class="form-control shadow-sm"
                   placeholder="Buscar por nombre, usuario o correo..." />
        </div>
        <div class="col-md-3">
            <select name="rol" class="form-select shadow-sm">
                <option value="">-- Todos los roles --</option>
                @foreach (var r in Model.RolesDisponibles)
                {
                    <option value="@r" selected="@(Model.Rol == r)">
                        @r
                    </option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100 shadow-sm">
                Buscar
            </button>
        </div>
    </form>

    <!-- Tabla de usuarios -->
    @if (Model.UsuariosFiltrados.Any())
    {
        <div class="table-responsive shadow-sm rounded-3">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nombre completo</th>
                        <th>Usuario</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Rol</th>
                        <th>Activo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model.UsuariosFiltrados)
                    {
                        <tr>
                            <td class="fw-semibold">@u.NombreCompleto</td>
                            <td>@u.Username</td>
                            <td>@u.Email</td>
                            <td>@u.TelefonoPersonal</td>
                            <td>
                                <select class="form-select border-0 shadow-sm">
                                    @foreach (var r in Model.RolesDisponibles)
                                    {
                                        <option value="@r" selected="@(u.Rol == r)">
                                            @r
                                        </option>
                                    }
                                </select>
                            </td>
                            <td>
                                @if (u.Activo)
                                {
                                    <span class="badge rounded-pill"
                                          style="background: var(--accent); color: var(--brand-border);">
                                        Sí
                                    </span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-secondary">No</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-sm btn-success shadow-sm">
                                        Guardar
                                    </button>
                                    <button type="button"
                                            class="btn btn-sm btn-outline-danger shadow-sm"
                                            data-bs-toggle="modal"
                                            data-bs-target="#confirmDeleteModal"
                                            data-user-cedula="@u.Cedula"
                                            data-user-name="@u.NombreCompleto">
                                        Eliminar
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm rounded-3 mt-3">
            No se encontraron usuarios con los filtros aplicados.
        </div>
    }
</div>

<!-- Modal de confirmación de eliminación -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true"
     data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <form asp-controller="Usuarios" asp-action="Eliminar" method="post" class="modal-content">
            @Html.AntiForgeryToken()

            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteLabel">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" name="cedula" id="deleteCedula" />
                <p class="mb-0">
                    ¿Seguro que deseas eliminar al usuario
                    <strong id="deleteUserName"></strong>?
                    Esta acción no se puede deshacer.
                </p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancelar
                </button>
                <button type="submit" class="btn btn-danger">
                    Sí, eliminar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const modalEl = document.getElementById('confirmDeleteModal');
            if (!modalEl) return;

            modalEl.addEventListener('show.bs.modal', (event) => {
                const button = event.relatedTarget;
                const cedula = button.getAttribute('data-user-cedula');
                const nombre = button.getAttribute('data-user-name');

                document.getElementById('deleteCedula').value = cedula;
                document.getElementById('deleteUserName').textContent = nombre;
            });
        });
    </script>
}
