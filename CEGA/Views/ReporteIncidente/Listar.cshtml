@model List<CEGA.Models.ReporteIncidente>

@{
    ViewData["Title"] = "Reportes de Incidentes";
}

<h2>Reportes de Incidentes</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<a asp-action="Crear" class="btn btn-primary mb-3">Agregar nuevo incidente</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Usuario</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NombreReporte</td>
                <td>@item.UsuarioID</td>
                <td>@item.FechaAccidente.ToShortDateString()</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
