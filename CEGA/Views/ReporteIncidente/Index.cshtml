@model List<CEGA.Models.ReporteIncidente>
@{
    ViewData["Title"] = "Reportes de Incidentes";
}

<!-- Header de página -->
<div class="mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <p class="text-muted mb-0">Registros de incidentes reportados por usuario y fecha.</p>
</div>

<div class="card">
    <div class="card-header d-flex flex-wrap gap-2 align-items-center">
        <a asp-action="Crear" class="btn btn-accent btn-sm">+ Nuevo incidente</a>

        <form method="get" class="d-flex gap-2 ms-auto" novalidate>
            <input name="q"
                   value="@ViewBag.Q"
                   class="form-control"
                   placeholder="Buscar (nombre, usuario, incapacidad)" />
            <button class="btn btn-outline-primary btn-sm" type="submit">Buscar</button>
        </form>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Usuario</th>
                        <th>Fecha Accidente</th>
                        <th>Incapacidad</th>
                        <th>Creado</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">Sin registros</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td>@r.NombreReporte</td>
                                <td>@r.UsuarioID</td>
                                <td>@r.FechaAccidente.ToString("dd/MM/yyyy")</td>
                                <td><span class="badge bg-info">@r.Incapacidad</span></td>
                                <td>@r.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
