@model List<CEGA.Models.ReporteIncidente>
@{
    ViewData["Title"] = "Reportes de Incidentes";

    // Helper para badge (por si en un futuro usas estados en incidentes)
    Func<string, string> BadgeClase = estado =>
    {
        if (string.IsNullOrWhiteSpace(estado)) return "bg-secondary";
        return estado.Equals("Aprobado", StringComparison.OrdinalIgnoreCase) ? "bg-success"
             : estado.Equals("Rechazado", StringComparison.OrdinalIgnoreCase) ? "bg-danger"
             : "bg-warning";
    };

    var count = Model?.Count() ?? 0;

    string FormatBytes(long? bytes)
    {
        if (bytes == null) return "—";
        double b = bytes.Value; string[] u = { "B", "KB", "MB", "GB" }; int i = 0;
        while (b >= 1024 && i < u.Length - 1) { b /= 1024; i++; }
        return $"{b:0.##} {u[i]}";
    }
}

<!-- Header con fondo -->
<div class="py-4 text-center text-white mb-4"
     style="background: var(--brand-mid); border-radius: .75rem;">
    <h2 class="fw-bold mb-3">Reportes de Incidentes</h2>
    <p class="mb-0 fs-5">
        Gestión y consulta de <span class="fw-semibold">incidentes</span> reportados.
    </p>
</div>

<div class="card">
    <div class="card-header d-flex flex-wrap gap-2 align-items-center">
        <a asp-action="Crear" class="btn btn-accent btn-sm">+ Nuevo incidente</a>

        <form method="get" class="d-flex gap-2 ms-auto" novalidate>
            <input name="q"
                   value="@ViewBag.Q"
                   class="form-control"
                   placeholder="Buscar (nombre, usuario, incapacidad)" />
            <button class="btn btn-outline-primary btn-sm" type="submit">Buscar</button>
        </form>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Usuario</th>
                        <th>Fecha Accidente</th>
                        <th>Incapacidad</th>
                        <th>Creado</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">Sin registros</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td>@r.NombreReporte</td>
                                <td>@r.UsuarioID</td>
                                <td>@r.FechaAccidente.ToString("dd/MM/yyyy")</td>
                                <td><span class="badge bg-info">@r.Incapacidad</span></td>
                                <td>@r.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
