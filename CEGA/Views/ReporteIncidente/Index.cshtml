@model List<CEGA.Models.ReporteIncidente>
@{
    ViewData["Title"] = "Reportes de Incidentes";
}
<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="d-flex gap-2 mb-3">
    <a asp-action="Crear" class="btn btn-primary">Nuevo incidente</a>
    <form method="get" class="d-flex gap-2">
        <input name="q" value="@ViewBag.Q" class="form-control" placeholder="Buscar (nombre, usuario, incapacidad)" />
        <button class="btn btn-outline-secondary" type="submit">Buscar</button>
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Usuario</th>
            <th>Fecha Accidente</th>
            <th>Incapacidad</th>
            <th>Creado</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr><td colspan="5" class="text-center text-muted">Sin registros</td></tr>
        }
        else
        {
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.NombreReporte</td>
                    <td>@r.UsuarioID</td>
                    <td>@r.FechaAccidente.ToString("dd/MM/yyyy")</td>
                    <td><span class="badge bg-info">@r.Incapacidad</span></td>
                    <td>@r.FechaCreacion.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        }
    </tbody>
</table>
