@* Views/Seguimiento/Partials/_ProyectosTablaPartial.cshtml *@
@model IEnumerable<CEGA.Models.ViewModels.ProyectoFilaVM>

<table class="table table-sm table-hover align-middle">
    <thead class="table-light">
        <tr><th style="width:90px">#</th><th>Nombre</th><th style="width:150px">Tareas</th><th style="width:160px"></th></tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.IdProyecto</td>
                <td class="fw-medium">@p.Nombre</td>
                <td>@p.CantidadTareas</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary"
                       asp-action="Index" asp-controller="Seguimiento" asp-route-proyectoId="@p.IdProyecto">
                        Gestionar tareas
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
