@model IEnumerable<CEGA.Models.Seguimiento.Tarea>

<div class="d-flex align-items-center justify-content-between mb-2">
    <h5 class="mb-0">Tareas creadas</h5>
    <span class="text-muted">@Model.Count() en total</span>
</div>

<table class="table table-sm table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Título</th>
            <th>Cédula Empleado</th>
            <th>Comentario</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var t in Model)
            {
                <tr>
                    <td>@t.Id</td>
                    <td>@t.Titulo</td>
                    <td>@t.CedulaEmpleado</td>
                    <td>@t.ComentarioInicial</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="4" class="text-center text-muted py-4">No hay tareas aún.</td></tr>
        }
    </tbody>
</table>
