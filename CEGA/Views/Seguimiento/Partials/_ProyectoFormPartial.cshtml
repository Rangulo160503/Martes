@model CEGA.Models.ViewModels.ProyectoFormVM

<form id="proyectoForm" method="post" action="@Model.FormAction">
    @Html.AntiForgeryToken()

    @if (Model.IdProyecto.HasValue)
    {
        <input type="hidden" name="IdProyecto" value="@Model.IdProyecto" />
    }

    <div class="mb-3">
        <label class="form-label">Nombre del proyecto</label>
        <input name="Nombre" class="form-control" value="@Model.Nombre" maxlength="120" required />
        @Html.ValidationMessage("Nombre", null, new { @class = "text-danger small" })
    </div>

    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-primary">@Model.SubmitText</button>
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
    </div>
</form>
