@model CEGA.Models.Proyecto

@{
    ViewData["Title"] = "Crear Proyecto";
}

<!-- Header de página -->
<div class="mb-3">
    <h2 class="mb-0">Crear Proyecto</h2>
    <p class="text-muted mb-0">Complete los datos para registrar un nuevo proyecto.</p>
</div>

<div class="card card-lg">
    <div class="card-header">Datos del proyecto</div>
    <div class="card-body">
        <form asp-action="Crear" method="post" novalidate class="row g-3">
            <div class="col-12">
                <label asp-for="Nombre" class="form-label">Nombre del Proyecto</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ej: Centro Comercial Atenas" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Detalles" class="form-label">Detalles</label>
                <textarea asp-for="Detalles" class="form-control" rows="3" placeholder="Describa el proyecto..."></textarea>
                <span asp-validation-for="Detalles" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="FechaInicio" class="form-label">Fecha de Inicio</label>
                <input asp-for="FechaInicio" type="date" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="FechaFin" class="form-label">Fecha de Finalización</label>
                <input asp-for="FechaFin" type="date" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-accent">Crear</button>
                <a asp-action="Index" class="btn btn-outline-primary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
